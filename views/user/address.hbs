<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <section class="pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 m-auto">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="dashboard-menu">
                                <ul class="nav flex-column" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link" id="dashboard-tab" data-bs-toggle="tab"
                                            href="/profile" role="tab" aria-controls="dashboard"
                                            aria-selected="false"><i
                                                class="fi-rs-settings-sliders mr-10"></i>Profile</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="/get/orders"
                                            role="tab" aria-controls="orders" aria-selected="false"><i
                                                class="fi-rs-shopping-bag mr-10"></i>Orders</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="track-orders-tab" data-bs-toggle="tab"
                                            href="/wallet" role="tab" aria-controls="track-orders"
                                            aria-selected="false"><i class="fi-rs-shopping-cart-check mr-10"></i>Track
                                            Wallet</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" id="address-tab" data-bs-toggle="tab" href="/address"
                                            role="tab" aria-controls="address" aria-selected="true"><i
                                                class="fi-rs-marker mr-10"></i>My Address</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="account-detail-tab" data-bs-toggle="tab"
                                            href="/wishlist" role="tab" aria-controls="account-detail"
                                            aria-selected="true"><i class="fi-rs-user mr-10"></i>Wishlist</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/returns"><i
                                                class="fi-rs-sign-out mr-10"></i>Return</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/referrals"><i
                                                class="fi-rs-sign-out mr-10"></i>Referrals</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="address-section">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Place</th>
                                            <th>House Number</th>
                                            <th>Street</th>
                                            <th>City</th>
                                            <th>Zipcode</th>
                                            <th>Country</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each addresses}}
                                        <tr data-id="{{this._id}}">
                                            <td>{{this.place}}</td>
                                            <td>{{this.houseNumber}}</td>
                                            <td>{{this.street}}</td>
                                            <td>{{this.city}}</td>
                                            <td>{{this.zipcode}}</td>
                                            <td>{{this.country}}</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-default" onclick="editAddress('{{this._id}}')">
                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-default" onclick="deleteAddress('{{this._id}}')">
                                                        <i class="fa-solid fa-delete-left"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                                <form id="addressForm" action="/address" method="POST">
                                    <div class="form-group">
                                        <label for="place">Place</label>
                                        <select name="place" class="form-control" required>
                                            <option value="home">Home</option>
                                            <option value="work">WorkPlace</option>
                                        </select>
                                        <small class="error-message text-danger"></small>
                                    </div>
                                    <div class="form-group">
                                        <label for="houseNumber">House Number</label>
                                        <input type="text" name="houseNumber" class="form-control">
                                        <small class="error-message text-danger"></small>
                                    </div>
                                    <div class="form-group">
                                        <label for="street">Street</label>
                                        <input type="text" name="street" class="form-control">
                                        <small class="error-message text-danger"></small>
                                    </div>
                                    <div class="form-group">
                                        <label for="city">City</label>
                                        <input type="text" name="city" class="form-control">
                                        <small class="error-message text-danger"></small>
                                    </div>
                                    <div class="form-group">
                                        <label for="zipcode">Zipcode</label>
                                        <input type="text" name="zipcode" class="form-control">
                                        <small class="error-message text-danger"></small>
                                    </div>
                                    <div class="form-group">
                                        <label for="country">Country</label>
                                        <input type="text" name="country" class="form-control">
                                        <small class="error-message text-danger"></small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Add Address</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{#if totalPages}}
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        {{#if (gt currentPage 1)}}
                        <li class="page-item">
                            <a class="page-link" href="/products?page={{subtract currentPage 1}}{{#if ../category}}&category={{../category}}{{/if}}{{#if ../sort}}&sort={{../sort}}{{/if}}{{#if ../productType}}&productType={{../productType}}{{/if}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo; Previous</span>
                            </a>
                        </li>
                        {{/if}}

                        {{#each (range 1 totalPages)}}
                        <li class="page-item {{#eq this ../currentPage}}active{{/eq}}">
                            <a class="page-link" href="/products?page={{this}}{{#if ../category}}&category={{../category}}{{/if}}{{#if ../sort}}&sort={{../sort}}{{/if}}{{#if ../productType}}&productType={{../productType}}{{/if}}">{{this}}</a>
                        </li>
                        {{/each}}

                        {{#if (lt currentPage totalPages)}}
                        <li class="page-item">
                            <a class="page-link" href="/products?page={{add currentPage 1}}{{#if ../category}}&category={{../category}}{{/if}}{{#if ../sort}}&sort={{../sort}}{{/if}}{{#if ../productType}}&productType={{../productType}}{{/if}}" aria-label="Next">
                                <span aria-hidden="true">Next &raquo;</span>
                            </a>
                        </li>
                        {{/if}}
                    </ul>
                </nav>
                {{/if}}
  </div>
    </section>

    <script>
document.getElementById('addressForm').addEventListener('submit', function(e) {
    e.preventDefault();

    // Clear previous error messages and reset input border colors
    document.querySelectorAll('.error-message').forEach(function(el) {
        el.textContent = '';
    });
    document.querySelectorAll('.form-control').forEach(function(el) {
        el.style.borderColor = '';
    });

    var place = document.querySelector('select[name="place"]');
    var houseNumber = document.querySelector('input[name="houseNumber"]');
    var street = document.querySelector('input[name="street"]');
    var city = document.querySelector('input[name="city"]');
    var zipcode = document.querySelector('input[name="zipcode"]');
    var country = document.querySelector('input[name="country"]');

    var isValid = true;
    var invalidFields = [];

    if (place.value.trim() === '') {
        invalidFields.push('Place');
        place.style.borderColor = 'red';
    }

    if (houseNumber.value.trim() === '' || !/^[a-zA-Z0-9\s]+$/.test(houseNumber.value.trim())) {
        invalidFields.push('House Number');
        houseNumber.style.borderColor = 'red';
    }

    if (street.value.trim() === '' || !/^[a-zA-Z0-9\s]+$/.test(street.value.trim())) {
        invalidFields.push('Street');
        street.style.borderColor = 'red';
    }

    if (city.value.trim() === '' || !/^[a-zA-Z\s]+$/.test(city.value.trim())) {
        invalidFields.push('City');
        city.style.borderColor = 'red';
    }

    if (zipcode.value.trim() === '' || !/^\d{6}$/.test(zipcode.value.trim())) {
        invalidFields.push('Zipcode');
        zipcode.style.borderColor = 'red';
    }

    if (country.value.trim() === '' || !/^[a-zA-Z\s]+$/.test(country.value.trim())) {
        invalidFields.push('Country');
        country.style.borderColor = 'red';
    }

    if (invalidFields.length > 0) {
        Swal.fire({
            icon: 'error',
            title: 'Validation Error',
            text: 'Please fill in the required fields correctly: ' + invalidFields.join(', ')
        });

        isValid = false;
    }

    if (isValid) {
        this.submit();
    }
});

document.querySelectorAll('.form-control').forEach(function(input) {
    input.addEventListener('input', function() {
        this.style.borderColor = '';
    });
});

function deleteAddress(id) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/address/${id}`, { method: 'DELETE' })
                .then(response => {
                    if (response.ok) {
                        Swal.fire({
                            title: 'Deleted!',
                            text: 'Your address has been deleted.',
                            icon: 'success',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => {
                            const row = document.querySelector(`tr[data-id="${id}"]`);
                            if (row) {
                                row.remove();
                            }
                        });
                    } else {
                        response.json().then(data => {
                            Swal.fire({
                                title: 'Failed!',
                                text: data.message || 'Failed to delete address.',
                                icon: 'error'
                            });
                        });
                    }
                })
                .catch(error => {
                    Swal.fire({
                        title: 'Error!',
                        text: 'An error occurred while deleting the address.',
                        icon: 'error'
                    });
                    console.error('Error deleting address:', error);
                });
        }
    });
}

function editAddress(id) {
    window.location.href = `/address/edit/${id}`;
}
</script>

<style>
.error-message {
    font-size: 0.875em;
    color: red;
    margin-top: 0.25em;
}

.form-group {
    margin-bottom: 1rem;
}

.input-container + .error-message {
    margin-top: 0.5rem;
}
</style>
