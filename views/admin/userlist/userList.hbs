<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">User</li>
    </ol>
</nav>
<section class="userList">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Users List</h1>
    </div>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped" id="example">
                        <thead>
                            <tr>
                                <th>S.no</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Verified</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td>{{add @index 1}}</td>
                                <td>{{this.firstname}} {{this.lastname}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.mobile}}</td>
                                <td>{{this.isVerified}}</td>
                                <td>{{#if this.isBlocked}}Blocked{{else}}Active{{/if}}</td>
                                <td>
                                    {{#if this.isBlocked}}
                                        <button class="btn btn-success toggle-status" data-id="{{this._id}}" data-status="unblock">Unblock</button>
                                    {{else}}
                                        <button class="btn btn-danger toggle-status" data-id="{{this._id}}" data-status="block">Block</button>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>

<script>
$(document).ready(function() {
    $('#example').DataTable({
        "paging": true,
        "searching": true,
        "info": true,
        "lengthChange": false,
        "pageLength": 10
    });

    $('#example tbody').on('click', '.toggle-status', function() {
        var button = $(this);
        var userId = button.data('id');
        var action = button.data('status');
        var actionText = action === 'block' ? 'Block' : 'Unblock';
        var confirmButtonText = action === 'block' ? 'Yes, block it!' : 'Yes, unblock it!';
        var successText = action === 'block' ? 'User has been blocked.' : 'User has been unblocked.';

        Swal.fire({
            title: 'Are you sure?',
            text: `You want to ${actionText.toLowerCase()} this user!`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: confirmButtonText
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/admin/${action}-user/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire(
                            'Changed!',
                            successText,
                            'success'
                        );
                        // Update button text and status based on new status
                        if (action === 'block') {
                            button.removeClass('btn-danger').addClass('btn-success').text('Unblock').data('status', 'unblock');
                            button.closest('tr').find('td:nth-child(5)').text('Blocked');
                        } else {
                            button.removeClass('btn-success').addClass('btn-danger').text('Block').data('status', 'block');
                            button.closest('tr').find('td:nth-child(5)').text('Active');
                        }
                    } else {
                        Swal.fire(
                            'Error!',
                            'There was an error changing the user status.',
                            'error'
                        );
                    }
                });
            }
        });
    });
});

</script>
